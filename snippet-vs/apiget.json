"API Get": {
    "scope": "php",
    "prefix": "apiget",
    "body": [
        "\\$url            = '$1';",
        "\\$client         = \\Config\\Services::curlrequest();",
        "\\$response       = \\$client->get(\\$url);",
        "\\$api['kode']    = \\$response->getStatusCode();",
        "\\$api['reason']  = \\$response->getReason();",
        "\\$api['body']    = json_decode(\\$response->getBody());",
    ],
    "description": "API Get"
},